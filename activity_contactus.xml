<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contactus">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/fosterleaders"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="56dp"
        android:fontFamily="serif-monospace"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:text="Foster Leaders"
        android:textColor="#8b0000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="35dp"
        android:fontFamily="serif-monospace"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:text="Assisting Former Foster Youth Today"
        android:textColor="#8b0000"
        android:textSize="15sp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#8b0000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:text="www.FosterLeaders.com" />

    <TextView
        android:id="@+id/visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/website"
        android:layout_centerHorizontal="true"
        android:textColor="#8b0000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:text="visit us at..." />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/visit"
        android:layout_centerHorizontal="true"
        android:textColor="#8b0000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:text="mail@fosterleaders.com" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/email"
        android:layout_centerHorizontal="true"
        android:textColor="#8b0000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:text="Email us at" />

    <TextView
        android:id="@+id/become"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/contact"
        android:layout_centerHorizontal="true"
        android:textColor="#8b0000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:text="To become a leader of tomorrow" />

</RelativeLayout>
